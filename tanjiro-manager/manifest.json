{
    "_metadata": {
        "major_version": 1,
        "minor_version": 1
    },
    "display_information": {
        "name": "tanjiro-dude"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": false,
            "messages_tab_enabled": true,
            "messages_tab_read_only_enabled": true
        },
        "bot_user": {
            "display_name": "Shadow Hello",
            "always_online": true
        },
        "slash_commands": [
            {
                "command": "/deathbyai",
                "description": "Play a game of Death by AI!",
                "should_escape": true
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write",
                "groups:read",
                "channels:write.invites", 
                "groups:write.invites", 
                "channels:manage", 
                "groups:write", 
                "im:write", 
                "chat:write.public",
                "datastore:read",
                "datastore:write",
                "channels:read",
                "commands",
                "users:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "member_joined_channel",
                "member_left_channel"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": true,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}
